<% include header %>
    <% include alert %>

    <div class="grid-fluid">
        <form action="javascript:void(0)" method="POST" id="sign-up-form" class="c4 a4 b4 form">
            <h2>Login</h2>
                <div class="form-field-group">
                    <input class="email form-field clearfix" type="email" name="email" placeholder="Email">
                </div>
                <div class="form-field-group">
                    <input class="password form-field clearfix" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-field-group">
                    <a class="forgot form-field" href="/forgot">Forgot password?</a>
                </div>
                <div class="form-field-group">
                    <input class="form-checkbox form-field" type="checkbox" name="agree" value="agrees">Test <a href="">Checkbox (temp)</a><br>
                </div>
                <div class="form-field-group">
                    <button id="login" type="submit" class="button button-rounded button-primary"/>Log me in!</button> <span>or</span> <a href="/">Sign up</a>
                </div>
                <div class="form-field-group">
                    <button class="testToken button button-rounded button-secondary" type="button">Test Token</button>
                </div>
                <div class="form-field-group">
                    <button class="logout button button-rounded button-secondary" type="button">Log Out</button>
                </div>
        </form>
    </div>

<% include footer %>
